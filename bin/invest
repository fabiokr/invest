#! /usr/bin/env ruby

require_relative "../lib/invest"

def get_arg(i, name)
  ARGV[i] || begin
    puts "Missing argument '#{name}'"
    exit 1
  end
end

if ARGV[0] == "-h"
  puts """
    Usage:

    invest
  """
else
  puts "Generating default report..."
  Invest.new.html_report!("tmp/data.html")

  puts "Generating report without Bitcoin & Imoveis..."
  Invest.new(ignore: ["Bitcoin", "Apartamento Pagani"]).html_report!("tmp/data-compact.html")
end
